{% extends 'base.html.twig' %}

{% block title %}Availability{% endblock %}

{% block body %}
<main class="relative h-full max-h-screen transition-all duration-200 ease-in-out xl:ml-68 rounded-xl">
    <div class="flex flex-wrap -mx-3">
          <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-xl dark:bg-slate-850 dark:shadow-dark-xl rounded-2xl bg-clip-border">
              <div class="p-6 pb-0 mb-0 border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                <h1 class="dark:text-white"> Availability</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ availability.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ availability.name }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ availability.phone }}</td>
            </tr>
             <tr>
                <th>Status</th>
                <td>
                {% if availability.status == 1 %}
                      <a href="">     <p type = "button" class="btn btn-success"> Success</p> </a>

                      {% else %} <a href=""><p type="button" class="btn btn-warning">Pending</p></a>

                      {% endif %}
                </td>
            </tr> 
            <tr>
                <th>Students</th>
                <td>{{ availability.students}}</td>
            </tr>
            <tr>
                <th>Offices</th>
                <td>{{ availability.offices }}</td>
            </tr>
            <tr>
                <th>Block</th>
                <td>{{ availability.block }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ availability.date ? availability.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_availability_index') }}"class="bg-gradient-to-tl from-emerald-500 to-teal-400 px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white>back to list"</a>

    <a href="{{ path('app_availability_edit', {'id': availability.id}) }}">edit</a>

    {{ include('availability/_delete_form.html.twig') }}
    </div>
    </main>
{% endblock %}
